{
  "extends": [
    "./node_modules/gts/",
    "plugin:react/recommended"
  ],
  "plugins": [
    "node",
    "react",
    "jest",
    "prettier"
  ],
  "settings": {
    "react": {
      "pragma": "h",
      "version": "detect"
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "globals": {
    "chrome": true
  },
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "node/no-unpublished-import": "off",
    "node/no-unpublished-require": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "react/display-name": "off",
    "react/react-in-jsx-scope": "off"
  }
}
