{
  "name": "chrome-cocopy",
  "version": "0.0.4",
  "private": true,
  "repository": "ssh://git@github.com/pokutuna/chrome-cocopy.git",
  "license": "MIT",
  "author": "pokutuna <mail@pokutuna.com>",
  "scripts": {
    "build": "webpack",
    "check": "gts check",
    "clean": "gts clean",
    "fix": "gts fix",
    "test": "jest",
    "posttest": "yarn run check",
    "validator": "ajv compile -s ./src/lib/function.schema.json -o ./src/lib/function.ajv.js",
    "watch": "webpack --watch",
    "zip": "yarn build && zip -r build-$(cat build/manifest.json | jq -r '.version').zip ./build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "gts fix"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.30",
    "@fortawesome/free-solid-svg-icons": "5.14.0",
    "@fortawesome/react-fontawesome": "0.1.11",
    "ajv": "6.12.5",
    "chroma-js": "2.1.0",
    "lodash.debounce": "4.0.8",
    "mustache": "4.0.1",
    "preact": "10.5.2",
    "prismjs": "1.21.0",
    "react-dnd": "11.1.3",
    "react-dnd-html5-backend": "11.1.3",
    "react-router-dom": "5.2.0",
    "react-simple-code-editor": "0.11.0",
    "styled-components": "5.2.0"
  },
  "devDependencies": {
    "@types/chroma-js": "2.1.0",
    "@types/chrome": "0.0.124",
    "@types/jest": "26.0.14",
    "@types/lodash.debounce": "4.0.6",
    "@types/mustache": "4.0.1",
    "@types/node": "13.13.21",
    "@types/react-router-dom": "5.1.5",
    "@types/styled-components": "5.1.3",
    "ajv-cli": "3.3.0",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "6.1.1",
    "css-loader": "3.6.0",
    "eslint-plugin-jest": "24.0.2",
    "eslint-plugin-react": "7.21.2",
    "gts": "2.0.2",
    "html-webpack-plugin": "4.5.0",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "jest-chrome": "0.7.0",
    "license-webpack-plugin": "2.3.0",
    "lint-staged": "10.4.0",
    "style-loader": "1.2.1",
    "ts-jest": "26.4.0",
    "ts-loader": "8.0.4",
    "typescript": "3.9.7",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12"
  },
  "engines": {
    "node": ">=12"
  }
}
