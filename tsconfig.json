{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "ES2020"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": false,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./build"
  },
  "include": [
    "src/libs.d.ts"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
